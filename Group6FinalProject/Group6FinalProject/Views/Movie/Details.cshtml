@model Group_6_Final_Project.Models.Movie

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<div>
    <br />
    <h1>@Html.DisplayFor(model => model.Title)</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.GenreType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MPAARating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MPAARating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tagline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tagline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublishedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actors)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actors)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Runtime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Runtime)
        </dd>
        <dt class="col-sm-2">
            Average Customer Review
        </dt>
        <dd class="col-sm-10">
            @{
                double averageRating = ViewBag.AverageCustomerReview;
                string formattedRating = averageRating == 0.0 ? " " : averageRating.ToString("0.00");
            }
            <text>@formattedRating</text>
        </dd>
        <h2>Reviews</h2>
        <div>
            @{
                var reviews = ViewBag.Reviews as List<Review>;
                if (reviews != null && reviews.Any())
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Rating</th>
                                <th>Comment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in reviews)
                            {
                                <tr>
                                    <td><strong>Rating:</strong> @review.Rating</td>
                                    <td><strong>Comment:</strong> @review.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No reviews available for this movie.</p>
                }
            }
        </div>
        <div>
            <!-- View Showtime Button -->
            <a asp-controller="Schedule" asp-action="Index" asp-route-movieID="@Model.MovieID" class="btn btn-danger">View Showtimes</a>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>
